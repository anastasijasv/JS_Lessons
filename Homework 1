// 4. Объявить переменную, значением которой будет ваше имя. 
// Объявить переменную со значением Hello World.
// Сконструировать фразу:
// Hello World! My name is <имя>.
// Вывести ее в консоль 

let myName = 'Anastasija';
let greeting = 'Hello World';
console.log(`${greeting}! My name is ${myName}`);

// 5. Найти остаток от деления на 5 для чисел: 67; 132; -9; 3
// Вывести результат в консоль в виде фраз 
// «остаток от деления 67 на 5 равен <ответ>»

let phrase1 = 'reminder of ';
let phrase2 = ' to 5 is ';
let number1 = 67;
let number2 = 132;
let number3 = -9;
let number4 = 3;
let result1 = number1 % 5;
let result2 = number2 % 5;
let result3 = number3 % 5;
let result4 = number4 % 5;

console.log(phrase1 + number1 + phrase2 + result1);
console.log(phrase1 + number2 + phrase2 + result2);
console.log(phrase1 + number3 + phrase2 + result3);
console.log(phrase1 + number4 + phrase2 + result4);
